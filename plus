	<script src="/app/plus.js?18-01-09-1"></script>

	<script>
		$(function() {
			var loaded = false
			if ($(window).scrollTop() > 3000) {
				loadTestimonials()
			}
			$(window).on('scroll', function() {
				loadTestimonials()
			})
			$(window).on('resize', function() {
				setTestimonialHeight()
			})

			function loadTestimonials() {
				if (loaded) return
				$('.testimonial-container').load('/plus-testimonials.php',
					function() {
						setTestimonialHeight()
						loaded = true
					})
			}

			function setTestimonialHeight() {
				var originalHeight = $('.testimonial.active').height()
				var padding = $('.testimonial').css('padding-top').replace('px', '')
				$('.testimonials').css('height', originalHeight + Number(padding) * 2)
				$('.testimonials').removeClass('u--no-transition')
			}



			/* Team Signup Form */

			var documentScrollTop,
				$form = $('.team-signup-form'),
				$thanks = $('.team-signup-thanks'),
				$signupContainer = $('.team-signup-wrapper'),
				$submitButton = $('.team-signup-button'),
				$formMessage = $('.team-signup-message'),
				$body = $(document.body),
				html = document.documentElement

			// Open form
			$('.show-team-signup').on('click', function(e) {
				e.preventDefault()

				$signupContainer.addClass('show-start').outerWidth()
				$signupContainer.addClass('show-end')

				$form.removeClass('hide')
				$thanks.removeClass('show')
				documentScrollTop = html.scrollTop
				$body.css('top', documentScrollTop * -1)
				$body.addClass('no-scroll')
			})

			// Block clicking in form from propagating to the overlay and closing the form
			$form.click(function(e) {
				e.stopPropagation()
			})

			// Close form
			$('.team-signup-close, .team-signup-wrapper, .team-signup-back').click(function() {
				$signupContainer.removeClass('show-end')
				setTimeout(function() {
					$signupContainer.removeClass('show-start')
				}, 500)
				$body.css('top', '')
				$body.removeClass('no-scroll')
				$(html).scrollTop(documentScrollTop)
			})

			// Submit form
			function onSuccess() {
				$formMessage.hide()
				$submitButton.val('Sign Up')
				$form.addClass('hide')
				$thanks.addClass('show')
			}

			function onError(error) {
				$formMessage.show()
				$submitButton.val('Sign Up')
				console.log(error)
			}

			function submitSignupForm(e) {
				e && e.preventDefault()
				$formMessage.hide()
				var formInfoObject = {}
				ga('send', 'event', 'Team', 'Signup submit', 'Plus')
				$form.serializeArray().forEach(function(input) { formInfoObject[input.name] = input.value })
				$.ajax('https://api.momentumdash.com/team/start', {
					type: 'POST',
					processData: false,
					data: JSON.stringify(formInfoObject),
					success: onSuccess,
					error: onError
				})

				$submitButton.val('Signing Up…')
			}

			$form.submit(submitSignupForm)

					})

		setTimeout(function(){
			var ga_sessionid = sessionStorage.getItem('ga_sessionid')
			if (ga_sessionid) {
				$('a.button-upgrade').attr('href', 'https://account.momentumdash.com/upgrade?session=' + ga_sessionid)
			}
		},100)


	</script>

	<script async src="/app/analytics.js"></script>

